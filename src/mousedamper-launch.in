import sys
import os
import subprocess
import argparse

import gi
gi.require_version("Gtk", "3.0")
from gi.repository import Gtk, Gio

parser = argparse.ArgumentParser(
    description='Launch mousedamper using configured values. Run mousedamper-config to modify these, or set them directly using gsettings or dconf-editor'
)
parser.add_argument(
    '-v', '--verbose',
    action='store_true',
    help='enable verbose output'
)
args = parser.parse_args()

settings = Gio.Settings(schema_id="org.mtw.mousedamper")

if not settings.get_boolean("enabled"):
    exit(0)

delta_val = settings.get_int("delta-threshold")

if settings.get_boolean("override-gtk-double-click-time"):
    double_click_time = settings.get_int("double-click-time-override")
else:
    double_click_time = Gtk.Settings.get_default().get_property("gtk-double-click-time")

# Kill any existing mousedamper processes to prevent multiple copies from stacking.
# TODO: Why doesn't the session kill it? Because it's root maybe...
subprocess.run(["killall", "mousedamper"], stderr=subprocess.DEVNULL, check=False)

# Replace this process with mousedamper
os.execv("@exec@", [
    "mousedamper",
    "verbose" if args.verbose else "terse",
    str(double_click_time),
    str(delta_val)
])