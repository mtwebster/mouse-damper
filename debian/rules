#!/usr/bin/make -f

export DEB_BUILD_MAINT_OPTIONS = hardening=+all

%:
	dh $@ --buildsystem=meson

override_dh_auto_configure:
	dh_auto_configure -- \
		--buildtype=debugoptimized

override_dh_strip:
	dh_strip --dbg-package=mousedamper-dbg

override_dh_fixperms:
	dh_fixperms
	# setuid bit for daemon
	chmod 4755 debian/mousedamper/usr/libexec/mousedamper/mousedamper
